<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="dialog"
            type="com.base.base.view.ShareDialog"/>

        <variable
            name="text"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_foreground_material_light"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_weiixnhaoyou"
                android:gravity="center"
                android:text="微信"
                android:onClick="@{()->dialog.onWXClick()}"
                android:textColor="#2d2d2d"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_weixinpengyouquan"
                android:gravity="center"
                android:text="朋友圈"
                android:onClick="@{()->dialog.onWXPClick()}"
                android:textColor="#2d2d2d"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_qq"
                android:gravity="center"
                android:text="QQ"
                android:onClick="@{()->dialog.onQQClick()}"
                android:textColor="#2d2d2d"/>
        </LinearLayout>
    </LinearLayout>

</layout>